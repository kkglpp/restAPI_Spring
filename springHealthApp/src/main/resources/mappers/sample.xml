<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.server.healthapp.springHealthApp.mapper.SampleMapper">

    <select id="getSportById" parameterType="hashmap" resultType="hashmap">
        SELECT *
        FROM sport
        WHERE id = #{id}
    </select>

    <insert id="registerSport" parameterType="hashmap" >
        INSERT INTO sport (name,metric_01,metric_02)
        values  (#{name}, #{metric_01}, #{metric_02})

    </insert>


</mapper>

